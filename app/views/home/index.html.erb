<div class="page-wrapper chiller-theme toggled">
  <div id="show-sidebar" class="btn btn-sm btn-dark" >
    <i class="fas fa-bars"></i>
  </div>
  <nav id="sidebar" class="sidebar-wrapper">
    <div class="sidebar-content">
      <div class="sidebar-brand">
        <a href="#">Task Manager</a>
        <div id="close-sidebar">
          <i class="fas fa-times"></i>
        </div>
      </div>
      <div class="sidebar-header">
        <div class="user-pic">
          <img class="img-responsive img-rounded" src="https://raw.githubusercontent.com/azouaoui-med/pro-sidebar-template/gh-pages/src/img/user.jpg"
            alt="User picture">
        </div>
        <div class="user-info">
          <span class="user-name"><%= current_user.first_name %>
            <strong><%= current_user.last_name %></strong>
          </span>
          <span class="user-role">Employee</span>
          <span class="user-status">
            <span><%= current_user.email %></span>
          </span>
        </div>
      </div>
      <!-- sidebar-header  -->
      <div class="sidebar-search">
        <div>
          <div class="input-group">
            <input type="text" class="form-control search-menu" placeholder="Search...">
            <div class="input-group-append">
              <span class="input-group-text">
                <i class="fa fa-search" aria-hidden="true"></i>
              </span>
            </div>
          </div>
        </div>
      </div>
      <!-- sidebar-search  -->
      <div class="sidebar-menu">
        <ul>
          <li class="header-menu">
            <span>Projects</span>
          </li>
          <li class="sidebar">
            <%= link_to my_tasks_path, remote: true do %>
            <i class="fa fa-book"></i><span>My Tasks</span>
            <% end %>
          </li>
          <li class="sidebar-dropdown">
            <a>
              <i class="fa fa-shopping-cart"></i>
              <span>My Projects</span>

            </a>
            <div class="sidebar-submenu">
              <ul>
                <% current_user.projects.each do |project| %>
                  <li>
                    <%= link_to  project.name,project_details_url(project:project), remote: true %>
                  </li>
                <% end %>
              </ul>
            </div>
          </li>


          <li class="header-menu">
            <span>Settings</span>
          </li>



          <li>
            <a id="edit_user">
              <i class="fas fa-user"></i>
              <span>Edit user</span>
            </a>
          </li>

          <li>
            <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/users">
              <i class="fas fa-trash-alt"></i>
              <span>Cancel account</span>
            </a>
          </li>
          <li>
            <a rel="nofollow" data-method="delete" href="/sign_out">
              <i class="fas fa-sign-out-alt"></i>
              <span>Sign out</span>
            </a>
          </li>

        </ul>
      </div>
      <!-- sidebar-menu  -->
    </div>
    <!-- sidebar-content  -->

  </nav>
  <!-- sidebar-wrapper  -->
  <main class="page-content">
    <div class="container-fluid" id="main_page">

    </div>

  </main>
  <!-- page-content" -->

</div>
